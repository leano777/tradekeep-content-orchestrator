# Database Configuration
DATABASE_URL="file:./prisma/dev.db"

# Server Configuration
PORT=3001
NODE_ENV=development

# Authentication Secrets (Generate secure random strings for production)
JWT_SECRET="your-jwt-secret-key-change-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-key-change-in-production"

# Session Configuration
SESSION_SECRET="your-session-secret-change-in-production"

# CORS Configuration
CLIENT_URL="http://localhost:3000"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# Email Service (Resend)
# Get your API key from https://resend.com
RESEND_API_KEY=""
EMAIL_FROM="noreply@yourdomain.com"

# Google Drive Integration (Optional)
# Create OAuth2 credentials at https://console.cloud.google.com
GOOGLE_DRIVE_CLIENT_ID=""
GOOGLE_DRIVE_CLIENT_SECRET=""
GOOGLE_DRIVE_REDIRECT_URI="http://localhost:3001/api/auth/google/callback"

# Social Media APIs (Optional)
# Twitter/X API
TWITTER_API_KEY=""
TWITTER_API_SECRET=""
TWITTER_ACCESS_TOKEN=""
TWITTER_ACCESS_SECRET=""

# LinkedIn API
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""

# Instagram API
INSTAGRAM_CLIENT_ID=""
INSTAGRAM_CLIENT_SECRET=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

# Redis Configuration (Optional - for production caching)
REDIS_URL=""

# Webhook Secret (for third-party integrations)
WEBHOOK_SECRET=""